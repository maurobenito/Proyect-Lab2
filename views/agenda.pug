extends layout

block content
  h1 Agenda Médica
  
  div#calendar
    // Aquí se mostrará el calendario

  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")
  script(src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.0/main.min.js")
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.0/main.min.css")


  script.
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: '/agenda/cargar-turnos', // Cargar los turnos desde la ruta del backend
        locale: 'es', // Para mostrarlo en español
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridMonth,timeGridWeek,timeGridDay'
        }
      });
      calendar.render();
    });
